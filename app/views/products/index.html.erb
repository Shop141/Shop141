
<div class="productspage">

  <div class="menu">
    
    <div class="small-5 columns">
      <p class="menulogo"> SHOP141 </p>
    </div>

    <div class="small-7 columns">
      <ul class="menulist">
        <li>ABOUT</li>
        <li>PRODUCTS</li>
        <li>CHARITIES</li>
      </ul>
    </div>

  </div>


  <div class="row toppad">
  </div> 



  <div class="row">
    <!-- <div class="cardscontainer"> -->

    <% @products.each do |product| %>
      <div class="large-2 columns">
      </div>
      <div class="large-4 columns">
        <div class="card">
          <div class="pricediv">
            <p class="price"><%= product.price %></p>
          </div>
          <div class="productimagediv" style="text-align: center">
            <%= link_to image_tag(product.img), product_path(product), :class => "productimage" %> 
          </div>
            <%= amazon_simple_pay_form_tag do %>
              <%= hidden_field_tag(:amount, product.price.tr('$', '').to_f) %><br/><br/>
              <%= hidden_field_tag 'referenceId', 'something' %>
              <%= hidden_field_tag 'description', 'something else' %>
              <%= image_submit_tag('/images/pay_me.gif') %>
            <% end %>
        </div>
      </div>
    <% end %>




      <div class="small-2 columns">
        <!-- padding -->
      </div>

















