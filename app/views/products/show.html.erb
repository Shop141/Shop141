<div class="row"> 
  <div class="small-4 columns">
    <div class="card2">
      <div class="pricediv">
        <p class="price"><%= @product.price %></p>

      </div>
      <div class="productimagediv" style = "text-align: center">
        <img src=<%= @product.img %>  />
      </div>
      <div class="buttondiv">
        <%= link_to '<button class="button btnBUY" type="button">PURCHASE</button>'.html_safe, @product.amazonUrl %>
        <%= amazon_simple_pay_form_tag do %>
          <%= hidden_field_tag(:amount, @product.price.tr('$', '').to_f) %>
          <%= hidden_field_tag 'referenceId', @product.id %>
          <%= hidden_field_tag 'description', 'something else' %>
          <button class="button btn141" type="submit">BUY 141</button>
        <% end %> 
      </div>
    </div>
  </div>
  <div class="small-8 columns">
    <div class="description">
      <%=@product.description%>
    </div>
  </div>
</div>
