
      <div class="large-4 columns">
        <div class="card">
          <div class="pricediv">
            <p class="price"><%= @product.price %></p>
          </div>
          <div class="productimagediv" style = "text-align: center">
            <img src=<%= @product.img %> />
          </div>
          <div class="buttondiv">
            <%= link_to '<button class="button btn141 fa fa-usd" type="button">BUY 141</button>'.html_safe, @product.amazonUrl %>
            <%= link_to '<button class="button btnBUY fa fa-usd" type="button">PURCHASE</button>'.html_safe, @product.amazonUrl %>

            
            <%= amazon_simple_pay_form_tag do %>
              <%= hidden_field_tag(:amount, @product.price.tr('$', '').to_f) %><br/><br/>
              <%= hidden_field_tag 'referenceId', @product.id %>
              <%= hidden_field_tag 'description', 'something else' %>
              <%= image_submit_tag('/images/pay_me.gif') %>
            <% end %> 

            <%= form_tag(:action => 'https://authorize.payments-sandbox.amazon.com/pba/paypipeline') do %>
              <%= hidden_field_tag(:amount, @product.price.tr('$', '').to_f) %>
              <%= hidden_field_tag 'referenceId', @product.id %>
              <%= hidden_field_tag 'description', 'something else' %>
              <%= f.submit "Donate" %>
            <% end %>




            <form action="https://authorize.payments-sandbox.amazon.com/pba/paypipeline" method="post">
