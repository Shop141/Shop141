<div id="editCharityModal" class="reveal-modal" data-reveal>
  <%= form_for [@user, @charity] do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %> <br />

  <%= f.label :description %>
  <%= f.text_field :description %> <br />

  <%= f.label :affiliate_id %>
